@model  List<H2Service.MedicalWastes.Dto.WasteImageDto>
<div class="weui-cells weui-cells_form">
    <div class="weui-cell">
        <div class="weui-cell__bd">
            <div class="weui-uploader">
                <div class="weui-uploader__hd">
                    <p class="weui-uploader__title">图片上传</p>
                    <div class="weui-uploader__info">@Model.Count/6</div>
                </div>
                <div class="weui-uploader__bd">
                    <ul class="weui-uploader__files" id="uploaderFiles">
                        @foreach (var image in Model)
                        {
                            <li class="weui-uploader__file"><img width="77" height="77" src="@image.ImgPath" /></li>
                        }

                    </ul>
                    <div class="weui-uploader__input-box">
                        <input id="btnCam" onclick="choosePic()" class="weui-uploader__input" type="button">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
