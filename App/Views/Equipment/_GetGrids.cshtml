@model IReadOnlyList<H2Service.Equipments.Dto.EquipmentOutput>
<div class="weui-grids">
    @foreach (var eq in Model)
    {
        var code_color = (eq.HasPatrol_I? "#1296db" : "grey");
        <a href="javascript:;" class="weui-grid js_grid open-popup" data-target="#popuphalf2">
            <div class="weui-grid__icon">
                <img src="../Content/weui/@eq.EquipmentTypeIcon" alt="">
            </div>
            <p class="weui-grid__label" style="color:@code_color">
                @if (eq.Status == H2Service.EnumDic.EquipmentStatus.完好.ToString())
                {
                    <span class="weui-badge" style="position: absolute;top: 0.5em;right: 1em;background-color:green">好</span>

                }
                else if (eq.Status == H2Service.EnumDic.EquipmentStatus.维修.ToString())
                {
                    <span class="weui-badge" style="position: absolute;top: 0.5em;right: 1em;">坏</span>
                }   
                @if (eq.IsUsing)
                {
                    <span class="weui-badge" style="position: absolute;top: 0.5em;left: 1em;background-color:#1296db">用</span>

                }
                @if (eq.IsLoaning_Id>0)
                {
                    <span class="weui-badge" style="position: absolute;bottom: 0.5em;right: 1em; background-color:orange">借</span>
                }
                @eq.Code
            </p>
        </a>
    }

</div>
<div style="height:25px"></div>
