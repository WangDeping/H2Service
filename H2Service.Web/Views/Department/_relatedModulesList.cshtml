@model List<H2Service.Account.Dto.DepartmentModulesRelationDto>

    <div class="m-demo__preview">
        <div class="m-list-timeline">
            <div class="m-list-timeline__items">
                @foreach (var relation in Model)
                {
                    <div class="m-list-timeline__item">
                        <span class="m-list-timeline__badge"></span>
                        <span class="m-list-timeline__text">
                           @relation.DepartmentName - @relation.Module.ToString()
                        </span>
                        <span class="m-list-timeline__time">
                            <a href="#" onclick="removeRelation(@relation.Id)" class="m-portlet__nav-link btn m-btn m-btn--hover-danger m-btn--icon m-btn--icon-only m-btn--pill" title="删除">                                
                                <i class="la la-trash"></i>\
                            </a>
                        </span>
                    </div>

                }
              
                
            </div>
        </div>
    </div>
